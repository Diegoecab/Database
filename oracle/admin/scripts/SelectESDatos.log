SELECT   T.NAME TS_NAME, F.NAME FILE_NAME, (S.PHYRDS + S.PHYWRTS) TOTAL_IO,
         (S.PHYBLKRD + S.PHYBLKWRT) TOTAL_BLOCKIO, S.PHYRDS STAT_READS,
         S.PHYBLKRD STAT_BREADS, S.PHYWRTS STAT_WRITES,
         S.PHYBLKWRT STAT_BWRITES
    FROM V$TABLESPACE T, V$DATAFILE F, V$FILESTAT S
   WHERE T.TS# = F.TS# AND F.FILE# = S.FILE#
UNION
SELECT   T.NAME TS_NAME, F.NAME FILE_NAME, (S.PHYRDS + S.PHYWRTS) TOTAL_IO,
         (S.PHYBLKRD + S.PHYBLKWRT) TOTAL_BLOCKIO, S.PHYRDS STAT_READS,
         S.PHYBLKRD STAT_BREADS, S.PHYWRTS STAT_WRITES,
         S.PHYBLKWRT STAT_BWRITES
    FROM V$TABLESPACE T, V$TEMPFILE F, V$FILESTAT S
   WHERE T.TS# = F.TS# AND F.FILE# = S.FILE#
ORDER BY TOTAL_IO DESC